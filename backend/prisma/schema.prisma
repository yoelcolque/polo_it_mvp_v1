generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         Int       @id @default(autoincrement())
  nombre     String
  apellido   String
  email      String    @unique
  telefono   Int
  contrase√±a String
  confirmar  String
  rol        Rol
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  solicitudes SolicitudAdopcion[]
}

model Mascota {
  id         Int       @id @default(autoincrement())
  nombre     String
  edad       Int
  especie    Especie
  pelaje     String
  sexo       Sexo
  estado     EstadoMascota
  imagen     String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  solicitudes SolicitudAdopcion[]
}

model SolicitudAdopcion {
  id         Int       @id @default(autoincrement())
  usuariosId Int
  mascotasId Int
  estado     EstadoSolicitud
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  usuario    Usuario   @relation(fields: [usuariosId], references: [id])
  mascota    Mascota   @relation(fields: [mascotasId], references: [id])
}

enum Rol {
  ADMIN
  USUARIO
}

enum Especie {
  PERRO
  GATO
  OTRO
}

enum Sexo {
  MACHO
  HEMBRA
}

enum EstadoMascota {
  DISPONIBLE
  ADOPTADO
  EN_TRANSITO
}

enum EstadoSolicitud {
  PENDIENTE
  ACEPTADA
  RECHAZADA
}
